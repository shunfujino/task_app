<div class="main-container">
    <div class="information">
        <h2>スケジュール一覧</h2>
        <%# 「スケジュールを登録しました」と表示 %>
    </div>

    <table class="index-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>タイトル</th>
                <th>開始日</th>
                <th>終了日</th>
                <th>終日</th>
                <th>スケジュール更新日</th>
                <th>確認</th>
                <th>編集</th>
                <th>削除</th>
            </tr>
        </thead>

        <tbody>
            <% @posts.each do |post| %>
            <tr>
                <td><%= post.id %></td>
                <td><%= post.title %></td>
                <td><%= post.start_date %></td>
                <td><%= post.end_date %></td>
                <td><% if post.all_day %>
                    〇

                    <% end %>
                </td>
                <td><%= post.updated_at.strftime('%Y年%m月%d日  %H時%M分') %></td>
                <td><%= link_to("確認", "/posts/#{post.id}") %></td>
                <td><%= link_to("編集","/posts/#{post.id}/edit") %></td>
                <td><%= link_to("削除", "/posts/#{post.id}/destroy", {method: "post"}) %>
                </td>

            </tr>
            <% end %>

        </tbody>
    </table>

    <p><%= link_to("スケジュール新規登録","/posts/new") %></p>


</div>